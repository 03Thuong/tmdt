<?xml version="1.0" encoding="utf-8"?>
<form>
   	<fieldset name="main" class="lad-fieldset-tab" label="COM_FLEXICONTACT_CONFIG_GENERAL_NAME">
        <field name="logging" type="radio" default="1" label="COM_FLEXICONTACT_LOGGING"
            class="btn-group btn-group-yesno" filter="integer">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

		<field name="log_keep_days" type="number" min="0" max="9999" label="COM_FLEXICONTACT_KEEP_DAYS" default="0" 
			description="COM_FLEXICONTACT_LOG_KEEP_DAYS_DESC" />
            
        <field name="email_html" type="radio" default="1" label="COM_FLEXICONTACT_HTML"
            class="btn-group btn-group-yesno" filter="integer">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field name="autofocus" type="radio" default="0" label="COM_FLEXICONTACT_AUTO_FOCUS"
            class="btn-group btn-group-yesno" filter="integer" description="COM_FLEXICONTACT_AUTO_FOCUS_DESC" >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field name="top_error" type="radio" default="0" label="COM_FLEXICONTACT_TOP_MESSAGE"
            class="btn-group btn-group-yesno" filter="integer" description="COM_FLEXICONTACT_TOP_MESSAGE_DESC" >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

		<field name="autofill" type="list" label="COM_FLEXICONTACT_V_AUTOFILL" default="off" 
			description="COM_FLEXICONTACT_V_AUTOFILL_DESC" >
            <option value="off">JNO</option>
            <option value="username">COM_FLEXICONTACT_V_AUTOFILL_USERNAME</option>
            <option value="name">COM_FLEXICONTACT_NAME</option>
		</field>
                
		<field name="show_copy" type="list" label="COM_FLEXICONTACT_EMAIL_TO_USER" default="1" >
            <option value="0">COM_FLEXICONTACT_COPYME_NEVER</option>
            <option value="1">COM_FLEXICONTACT_COPYME_CHECKBOX</option>
            <option value="2">COM_FLEXICONTACT_COPYME_ALWAYS</option>
		</field>

		<field name="copyme_prompt" type="text" label="COM_FLEXICONTACT_COPY_ME_PROMPT" default=""
			labelclass="lad-leftindent" description="COM_FLEXICONTACT_COPY_ME_PROMPT_DESC" />

		<field name="button_text" type="text" label="COM_FLEXICONTACT_CONFIG_BUTTON_TEXT" default=""
			description="COM_FLEXICONTACT_CONFIG_BUTTON_TEXT_DESC" />

		<field name="button_colour" type="buttonclass" label="COM_FLEXICONTACT_SEND_COLOUR" default="" />

		<field name="button_class" type="text" label="COM_FLEXICONTACT_CONFIG_BUTTON_CLASS" default=""
			description="COM_FLEXICONTACT_CONFIG_BUTTON_CLASS_DESC" />

		<field name="error_class" type="text" label="COM_FLEXICONTACT_CONFIG_ERROR_CLASS" default=""
			description="COM_FLEXICONTACT_CONFIG_ERROR_CLASS_DESC" />

		<field name="show_mandatory" type="list" label="COM_FLEXICONTACT_CONFIG_SHOW_MANDATORY" default="1" 
			description="COM_FLEXICONTACT_CONFIG_SHOW_MANDATORY_DESC" >
            <option value="0">COM_FLEXICONTACT_NEVER</option>
            <option value="1">COM_FLEXICONTACT_ALWAYS</option>
            <option value="2">COM_FLEXICONTACT_ON_ERROR</option>
		</field>

	</fieldset>
    
	<fieldset name="agreement"  class="lad-fieldset-tab" label="COM_FLEXICONTACT_AGREEMENT_REQUIRED">
        <field type="spacer" name="heading3" label="COM_FLEXICONTACT_AGREEMENT_REQUIRED_DESC" />
        
        <field name="agreement_prompt" type="textarea" rows="5" class="input-xlarge" label="COM_FLEXICONTACT_V_PROMPT" default="" />

        <field name="agreement_link" type="text" class="input-xlarge" label="COM_FLEXICONTACT_LINK" default="" />

		<field name="agreement_style" type="list" label="COM_FLEXICONTACT_LINK_STYLE" default="0" >
            <option value="0">COM_FLEXICONTACT_POPUP</option>
            <option value="1">COM_FLEXICONTACT_NEW_WINDOW</option>
            <option value="2">COM_FLEXICONTACT_BELOW</option>
		</field>
   	</fieldset>
 
</form>